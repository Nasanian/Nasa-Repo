# description	: Fast and light lolcat based on C.
# depends	: gcc

name=c-lolcat
version=git
release=r2


build() {
  mkdir -pv $PKG/etc
  git clone https://github.com/jaseg/lolcat.git --depth 1 --jobs $(nproc)
  cd lolcat
  make
  make DESTDIR=$PKG install
  mkdir -p $PKG/usr/bin
  cp lolcat $PKG/usr/bin
}
