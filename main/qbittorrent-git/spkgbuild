# description	: An advanced BitTorrent client programmed in C++, based on Qt toolkit and libtorrent (github release)
# depends	: libtorrent-rasterbar boost qt5 python3

name=qbittorrent-git
version=git
release=r1
source=""

build() {
  git clone https://github.com/qbittorrent/qBittorrent --depth 1 --jobs $(nproc)
  cd qBittorrent
	export QBT_ADD_CONFIG='nostrip'

	./configure --prefix=/usr
	make
	make INSTALL_ROOT=$PKG install
}
