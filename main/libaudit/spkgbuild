# description	: just needed for selinux
# depends	: cmake gcc openldap

name=libaudit
version=9999
release=git-r1
options=""
noextract=""
backup=""
source=""

build() {
  git clone https://github.com/linux-audit/audit-userspace.git --depth 1 --jobs $(nproc)
  cd audit-userspace
  ./autogen.sh
  ./configure --prefix=/usr/
	make
	make DESTDIR=$PKG install
}
