# description	: similar to itch, finds free games easily for you to play!
# depends	: wget tar mono

name=gamejolt
version=galaxy
release=r1

build() {

  download="https://f-cdn.gamejolt.net/data/games/5/162/362412/protected-files-cdn/5fc14f96d98af/gamejoltclient.tar.gz?secure=w7h7svbp3kSNu162j8ilFA%2C1606589696"
  mkdir -pv $PKG/opt/gamejolt/
  rm -rf /opt/gamejolt
  rm -rf /usr/bin/gamejolt

  mkdir $name-$version
  cd $name-$version
  wget https://candy-gamejolt.surge.sh/gamejolt
  mv gamejolt /usr/bin/

  wget $download -O gamejolt.tar.gz

  tar xvf gamejolt.tar.gz
  rm -rf gamejolt.tar.gz

  mkdir -p /opt/gamejolt
  mv * /opt/gamejolt



  chmod 777 /usr/bin/gamejolt
}
