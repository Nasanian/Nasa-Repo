# description	: RIAA just got owned LMAO. PARTY TIME!
# depends	: python3

name=youtube-dl2
version=git
release=r1

build() {
  git clone https://github.com/ytdl-org/youtube-dl.git --depth 1 --jobs $(nproc)
  cd youtube-dl
	sed -i 's|etc/bash_completion.d|share/bash-completion/completions|' setup.py
	sed -i 's|etc/fish/completions|share/fish/completions|' setup.py

	python3 setup.py install --root=$PKG --optimize=1
}
