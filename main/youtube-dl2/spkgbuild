# description	: RIAA is stupid. youtube-dl. the youtube-dl you've come to love is here.
# depends	: python3

name=youtube-dl2
version=9999
release=git
options=""
noextract=""
backup=""
source=""

build() {
  git clone https://github.com/l1ving/youtube-dl.git --depth 1 --jobs $(nproc)
  cd youtube-dl
	sed -i 's|etc/bash_completion.d|share/bash-completion/completions|' setup.py
	sed -i 's|etc/fish/completions|share/fish/completions|' setup.py

	python3 setup.py install --root=$PKG --optimize=1
}
