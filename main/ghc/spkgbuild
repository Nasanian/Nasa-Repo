# description	: haskell compiler
# depends	: llvm clang automake gcc automake

name=ghc
version=9999
release=git-r1
options=""
noextract=""
backup=""
source=""

build() {
  git clone --recurse-submodules https://github.com/ghc/ghc.git --depth 1
  cd ghc
  ./boot
	./configure
	make
	make DESTDIR=$PKG install
}
